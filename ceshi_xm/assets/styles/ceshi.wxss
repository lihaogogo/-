page {
  line-height: 1.6;
  background-color:#efeff4;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}
.clear{
  clear: both;
}
.clear {
  zoom: 1;
}
.clear::after {
  height: 0;
  display: block;
  content: "\20";
  clear: both;
}
.form_title {
  font-size: 2rem;
}
