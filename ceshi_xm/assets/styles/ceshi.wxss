}
.bd_content{
  background-color: #fff;
  position: relative;
}
.bd_item{
  display: flex;
  display: -webkit-flex;
  position: relative;
  margin-left: 1rem;
  border-bottom: 1px solid silver;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.bd_items{
   border-bottom: 0px ;
}
